<Page
    x:Class="Controls.CompactOverlay.DefaultCompactOverlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Controls.CompactOverlay"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="TodoCompactOverlayPage"
    mc:Ignorable="d">

    <Grid>
        <TextBlock Margin="8" FontSize="36">我是小窗模式</TextBlock>
        <Button
            x:Name="CompactOverlayBtn"
            x:Uid="CompactOverlayBtn"
            Margin="8"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Command="{x:Bind ViewModel.CompactOverlayCommand}"
            Foreground="{ThemeResource SystemAccentColor}">
            <FontIcon FontFamily="/Assets/Font/Segoe Fluent Icons.ttf#Segoe Fluent Icons" Glyph="&#xEE47;" />
        </Button>
    </Grid>
</Page>
