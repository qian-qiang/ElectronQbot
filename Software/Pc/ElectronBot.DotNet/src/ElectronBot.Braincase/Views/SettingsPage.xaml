<Page
    x:Class="ElectronBot.Braincase.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:ElectronBot.Braincase.Helpers"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <converters:BoolToVisibilityConverter
            x:Name="ReverseBoolToVisibility"
            FalseValue="Visible"
            TrueValue="Collapsed" />
    </Page.Resources>
    <Grid>
        <ScrollViewer>
            <StackPanel x:Name="ContentArea">

                <StackPanel>
                    <StackPanel>
                        <StackPanel
                            Margin="{StaticResource SmallTopMargin}"
                            Orientation="Horizontal"
                            Visibility="{x:Bind ViewModel.IsLoggedIn, Mode=OneWay}">
                            <Ellipse Width="64" Height="64">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{x:Bind ViewModel.User.Photo, Mode=OneWay}" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Margin="{StaticResource SmallLeftMargin}">
                                <TextBlock Text="{x:Bind ViewModel.User.Name, Mode=OneWay}" />
                                <TextBlock Margin="{StaticResource XSmallTopMargin}" Text="{x:Bind ViewModel.User.UserPrincipalName, Mode=OneWay}" />
                            </StackPanel>
                        </StackPanel>
                        <HyperlinkButton
                            x:Uid="Settings_LogOut"
                            Margin="{StaticResource XSmallTopMargin}"
                            Command="{x:Bind ViewModel.LogOutCommand}"
                            Visibility="{x:Bind ViewModel.IsLoggedIn, Mode=OneWay}" />
                        <TextBlock
                            x:Uid="Settings_NoUserLoggedIn"
                            Margin="{StaticResource XSmallTopMargin}"
                            Visibility="{x:Bind ViewModel.IsLoggedIn, Mode=OneWay, Converter={StaticResource ReverseBoolToVisibility}}" />
                        <HyperlinkButton
                            x:Uid="Settings_LogIn"
                            Margin="{StaticResource XSmallTopMargin}"
                            Command="{x:Bind ViewModel.LogInCommand}"
                            Visibility="{x:Bind ViewModel.IsLoggedIn, Mode=OneWay, Converter={StaticResource ReverseBoolToVisibility}}" />
                    </StackPanel>
                    <Expander
                        Width="800"
                        Margin="0,8,0,4"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Left"
                        ExpandDirection="Down"
                        IsExpanded="False">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Border Margin="4,4,12,4">
                                        <FontIcon FontFamily="/Assets/Font/Segoe Fluent Icons.ttf#Segoe Fluent Icons" Glyph="&#xE790;" />
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            x:Uid="AppTheme"
                                            Margin="0,4,0,4"
                                            FontSize="16" />
                                        <TextBlock
                                            x:Uid="SelectAppTheme"
                                            Margin="0,0,0,4"
                                            FontSize="12" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </Expander.HeaderTemplate>
                        <Grid>
                            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                                <!--<TextBlock x:Uid="Settings_Theme" />-->

                                <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                    <RadioButton
                                        x:Uid="Settings_Theme_Light"
                                        Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                        FontSize="15"
                                        GroupName="AppTheme"
                                        IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}">
                                        <RadioButton.CommandParameter>
                                            <xaml:ElementTheme>Light</xaml:ElementTheme>
                                        </RadioButton.CommandParameter>
                                    </RadioButton>
                                    <RadioButton
                                        x:Uid="Settings_Theme_Dark"
                                        Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                        FontSize="15"
                                        GroupName="AppTheme"
                                        IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}">
                                        <RadioButton.CommandParameter>
                                            <xaml:ElementTheme>Dark</xaml:ElementTheme>
                                        </RadioButton.CommandParameter>
                                    </RadioButton>
                                    <RadioButton
                                        x:Uid="Settings_Theme_Default"
                                        Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                        FontSize="15"
                                        GroupName="AppTheme"
                                        IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Default, Mode=OneWay}">
                                        <RadioButton.CommandParameter>
                                            <xaml:ElementTheme>Default</xaml:ElementTheme>
                                        </RadioButton.CommandParameter>
                                    </RadioButton>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Expander>

                    <Expander
                        Width="800"
                        Margin="0,8,0,4"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Left"
                        ExpandDirection="Down"
                        IsExpanded="False">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Border Margin="4,4,12,4">
                                        <FontIcon FontFamily="/Assets/Font/Segoe Fluent Icons.ttf#Segoe Fluent Icons" Glyph="&#xE121;" />
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            x:Uid="BotSettingTitle"
                                            Margin="0,4,0,4"
                                            FontSize="16" />
                                        <TextBlock
                                            x:Uid="BotSettingDesc"
                                            Margin="0,0,0,4"
                                            FontSize="12" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </Expander.HeaderTemplate>
                        <Grid>
                            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Uid="ClockCumstomWords"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="240"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.CustomClockTitle, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Uid="ClockCustomFontSize"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Grid Grid.Column="1">
                                            <NumberBox
                                                x:Name="ClockCustomTitleFontSize"
                                                LargeChange="4"
                                                Maximum="40"
                                                Minimum="16"
                                                SmallChange="2"
                                                SpinButtonPlacementMode="Inline"
                                                Value="{x:Bind ViewModel.BotSetting.CustomClockTitleFontSize, Mode=TwoWay}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="ValueChanged">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </NumberBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <Line
                                    Margin="8"
                                    Stroke="{ThemeResource SystemAccentColor}"
                                    StrokeThickness="2"
                                    X1="0"
                                    X2="600"
                                    Y1="0"
                                    Y2="0" />

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <TextBlock
                                        x:Uid="EmojisAvatarBtn"
                                        Width="100"
                                        VerticalAlignment="Center" />
                                    <Button
                                        x:Uid="EmojisAvatarAddBtn"
                                        Margin="4"
                                        Command="{x:Bind ViewModel.AddEmojisAvatarCommand}">
                                        <FontIcon
                                            FontFamily="/Assets/Font/Segoe Fluent Icons.ttf#Segoe Fluent Icons"
                                            FontSize="48"
                                            Glyph="&#xE158;" />
                                    </Button>
                                    <Border
                                        Width="48"
                                        Height="48"
                                        Margin="4"
                                        CornerRadius="4">
                                        <Image Source="{x:Bind ViewModel.EmojisAvatarBitMap, Mode=TwoWay}" />
                                    </Border>
                                    <Button
                                        x:Uid="EmojisAvatarAddBtn"
                                        Margin="4"
                                        Command="{x:Bind ViewModel.RemoveEmojisAvatarCommand}">
                                        <FontIcon
                                            FontFamily="/Assets/Font/Segoe Fluent Icons.ttf#Segoe Fluent Icons"
                                            FontSize="48"
                                            Glyph="&#xF78A;" />
                                    </Button>
                                </StackPanel>
                                <StackPanel Margin="4" Orientation="Horizontal">
                                    <TextBlock
                                        x:Uid="EmojisAvatar"
                                        Width="100"
                                        VerticalAlignment="Center" />
                                    <TextBox
                                        Width="280"
                                        Margin="4"
                                        IsReadOnly="True"
                                        Text="{x:Bind ViewModel.EmojisAvatar, Mode=OneWay}"
                                        TextWrapping="NoWrap" />
                                </StackPanel>

                                <StackPanel Margin="4" Orientation="Horizontal">
                                    <TextBlock
                                        x:Uid="CustomViewGaussianBlurValue"
                                        Width="100"
                                        VerticalAlignment="Center" />
                                    <Slider
                                        Width="280"
                                        Margin="4"
                                        Maximum="8"
                                        Minimum="0"
                                        TickFrequency="0.5"
                                        ValueChanged="{x:Bind ViewModel.RangeBase_OnValueChanged}"
                                        Value="{x:Bind ViewModel.BotSetting.GaussianBlurValue, Mode=TwoWay}" />
                                </StackPanel>

                                <StackPanel Margin="4" Orientation="Horizontal">
                                    <TextBlock
                                        x:Uid="CustomViewContentIsVisibility"
                                        Width="100"
                                        VerticalAlignment="Center" />
                                    <ToggleSwitch
                                        Margin="4"
                                        IsOn="{x:Bind ViewModel.BotSetting.CustomViewContentIsVisibility, Mode=OneWay}"
                                        Toggled="{x:Bind ViewModel.ToggleSwitch_OnToggled}" />
                                </StackPanel>

                                <StackPanel Margin="4" Orientation="Horizontal">
                                    <TextBlock
                                        x:Uid="IsHelloEnabled"
                                        Width="160"
                                        VerticalAlignment="Center" />
                                    <ToggleSwitch
                                        Margin="4"
                                        IsOn="{x:Bind ViewModel.BotSetting.IsHelloEnabled, Mode=OneWay}"
                                        Toggled="{x:Bind ViewModel.IsHelloToggleSwitch_OnToggled}" />
                                </StackPanel>

                                <Line
                                    Margin="8"
                                    Stroke="{ThemeResource SystemAccentColor}"
                                    StrokeThickness="2"
                                    X1="0"
                                    X2="600"
                                    Y1="0"
                                    Y2="0" />

                                <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                    <ComboBox
                                        x:Uid="CameraCB"
                                        Width="240"
                                        Margin="4"
                                        DisplayMemberPath="DataValue"
                                        ItemsSource="{x:Bind ViewModel.Cameras, Mode=OneWay}"
                                        SelectedItem="{x:Bind ViewModel.CameraSelect, Mode=TwoWay}">
                                        <i:Interaction.Behaviors>
                                            <ic:EventTriggerBehavior EventName="SelectionChanged">
                                                <ic:InvokeCommandAction Command="{x:Bind ViewModel.CameraCommand}" />
                                            </ic:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                    </ComboBox>
                                    <ComboBox
                                        x:Uid="AudioCB"
                                        Width="240"
                                        Margin="4"
                                        DisplayMemberPath="DataValue"
                                        ItemsSource="{x:Bind ViewModel.AudioDevs, Mode=OneWay}"
                                        SelectedItem="{x:Bind ViewModel.AudioSelect, Mode=TwoWay}">
                                        <i:Interaction.Behaviors>
                                            <ic:EventTriggerBehavior EventName="SelectionChanged">
                                                <ic:InvokeCommandAction Command="{x:Bind ViewModel.AudioCommand}" />
                                            </ic:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                    </ComboBox>
                                </StackPanel>
                                <Line
                                    Margin="8"
                                    Stroke="{ThemeResource SystemAccentColor}"
                                    StrokeThickness="2"
                                    X1="0"
                                    X2="600"
                                    Y1="0"
                                    Y2="0" />

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Uid="CHatBotType"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Grid Grid.Column="1">
                                            <ComboBox
                                                x:Uid="ChangeChatBotCB"
                                                Width="120"
                                                Margin="0,0,8,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                DisplayMemberPath="DataValue"
                                                ItemsSource="{x:Bind ViewModel.ChatBotComboxModels}"
                                                SelectedItem="{x:Bind ViewModel.ChatBotSelect, Mode=TwoWay}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="SelectionChanged">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.ChatBotChangedCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </ComboBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Uid="ChatGPTVersion"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Grid Grid.Column="1">
                                            <ComboBox
                                                x:Uid="ChangeGPTVersionCB"
                                                Width="160"
                                                Margin="0,0,8,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                DisplayMemberPath="DataValue"
                                                ItemsSource="{x:Bind ViewModel.ChatGPTVersionomboxModels}"
                                                SelectedItem="{x:Bind ViewModel.ChatGPTVersionSelect, Mode=TwoWay}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="SelectionChanged">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.ChatGPTVersionChangedCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </ComboBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Uid="ChatGPT-SessionKey"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="360"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.ChatGPTSessionKey, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="OpenAI BaseUrl:" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="360"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.OpenAIBaseUrl, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <!--  讯飞星火  -->

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="SparkDesk APPID:" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="360"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.SparkDeskAppId, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="SparkDesk APISecret:" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="360"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.SparkDeskAPISecret, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="SparkDesk APIKey:" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="360"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.SparkDeskAPIKey, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Uid="Turing-AppKey"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="360"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.TuringAppkey, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Uid="Turing-UserId"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="360"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.TuringUserId, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>



                                <StackPanel Margin="8" Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Uid="AnswerText"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Grid Grid.Column="1">
                                            <TextBox
                                                Width="360"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind ViewModel.BotSetting.AnswerText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                                <i:Interaction.Behaviors>
                                                    <ic:EventTriggerBehavior EventName="LostFocus">
                                                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.SaveBotSettingCommand}" />
                                                    </ic:EventTriggerBehavior>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </Grid>
                                </StackPanel>

                            </StackPanel>
                        </Grid>
                    </Expander>


