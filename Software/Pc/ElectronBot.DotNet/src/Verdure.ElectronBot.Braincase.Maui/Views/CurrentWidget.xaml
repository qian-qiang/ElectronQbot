<VerticalStackLayout
    Spacing="15"
    x:Class="Verdure.ElectronBot.Braincase.Maui.Views.CurrentWidget"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Image
        Aspect="AspectFit"
        HeightRequest="200"
        HorizontalOptions="Center"
        Source="weather_partly_cloudy_day.png"
        WidthRequest="200">
        <!--<Image.Shadow>
            <Shadow Brush="#2B0B98" Offset="20,20" Radius="20" Opacity="0.8"/>
        </Image.Shadow>-->
    </Image>

    <Label
        HorizontalOptions="Center"
        Text="52℉"
        class="Title1" />

    <Border
        BackgroundColor="{StaticResource Primary}"
        HorizontalOptions="Center"
        Padding="15,4"
        Stroke="Transparent"
        StrokeThickness="1">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="60" />
        </Border.StrokeShape>
        <Label
            FontSize="18"
            HorizontalOptions="Center"
            Text="Clear"
            TextColor="{StaticResource White}" />
    </Border>


</VerticalStackLayout>